<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_dark_blue">
        <ImageView
            android:id="@+id/signup_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/white_round_angle"

        >
        <TextView
            android:id="@+id/signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="30sp"
            android:textColor="@color/main_dark_blue"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/signup_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <EditText
            android:id="@+id/signup_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:background="@drawable/gray_round_angle_border"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/singup_email_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check email format"
            android:textColor="@color/status_red"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/signup_username"
            app:layout_constraintStart_toStartOf="@+id/signup_username"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:background="@drawable/gray_round_angle_border"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/singup_email_wrong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <TextView
            android:id="@+id/singup_password_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter password"
            android:textColor="@color/status_red"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/signup_password"
            app:layout_constraintStart_toStartOf="@+id/signup_password"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Signup_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@drawable/main_color_round_angle"
            app:layout_constraintTop_toBottomOf="@id/signup_password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>