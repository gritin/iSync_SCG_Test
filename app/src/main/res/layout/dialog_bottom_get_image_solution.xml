<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_round_angle"
            >
            <TextView
                android:id="@+id/bottom_get_image_solution_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Solution"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/main_dark_blue"
                android:textSize="20sp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_get_image_solution_upload_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/bottom_get_image_solution_upload_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Gallery"
                android:textAlignment="center"
                android:textColor="@color/main_dark_blue"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/bottom_get_image_solution_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottom_get_image_solution_take_a_photo"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                />
            <View
                android:id="@+id/bottom_get_image_solution_line"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/main_dark_blue"
                app:layout_constraintTop_toBottomOf="@+id/bottom_get_image_solution_upload_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_get_image_solution_take_a_photo"
                />

            <TextView
                android:id="@+id/bottom_get_image_solution_take_a_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Camera"
                android:textAlignment="center"
                android:textColor="@color/main_dark_blue"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/bottom_get_image_solution_upload_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bottom_get_image_solution_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_color_round_angle"
            android:fontFamily="@font/montserrat_regular"
            android:text="cancel"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>